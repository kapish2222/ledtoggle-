from tkinter import *
import tkinter .font
from gpiozero import LED
import RPi.GPIO as GPIO
GPIO.setmode(GPIO.BCM)

##hardware
led1 = LED(4)
led2 = LED(12)
led3 = LED(23)

win = Tk()
win.Title("LED Toggler")
myfont = tkinter.font.Font(family = "Helvetica" , size = 12, weight = "bold")

def led1Toggle():
    if led1.is_lit:
       led1.off()
       ledButton["text"] = "Turn LED on"
    else:
       led1.on()

def led2Toggle():
    if led2.is_lit:
       led2.off()
       ledButton["text"] = "Turn LED on"
    else:
       led2.on()     

def ledToggle():
    if led3.is_lit:
       led3.off()
       ledButton["text"] = "Turn LED on"
    else:
       led3.on()   


ledButton = Button(win, text = 'Turn LED on' , font = myfont, command = led1Toggle, bg = 'bisque2' , height = 2, width = 25)
ledButton.grid(row=0,column=1)
ledButton = Button(win, text = 'Turn LED On' , font = myfont, command = led2Toggle, bg = 'bisque2' , height = 2, width = 25)
ledButton.grid(row=0,column=2)
ledButton = Button(win, text = 'Turn LED On' , font = myfont, command = led3Toggle, bg = 'bisque2' , height = 2, width = 25)
ledButton.grid(row=0,column=3)
